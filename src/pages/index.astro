---
import Layout from "@layouts/layout.astro"

const date = new Date().toLocaleString('en-US', {
    timeZone: 'Asia/Jakarta',
    hour: '2-digit',
    minute: '2-digit',
    second: '2-digit',
    hour12: false, 
});

---

<Layout className="overflow-hidden">
    <div class="w-full h-screen flex flex-col p-4 md:px-8 xl:px-16 gap-8">
        <section class="w-full h-full flex flex-col flex-shrink justify-center items-center gap-16">
            <div class="w-fit flex flex-col justify-center items-center">
                <div class="w-fit flex flex-col justify-center items-center gap-2">
                    <h1 class="text-center text-7xl md:text-8xl xl:text-9xl tracking-tighter uppercase font-medium min-h-20 flex justify-center items-center">
                        <span id="name">Christopher Alden</span>
                    </h1>
                    <h2 class="text-base md:text-lg xl:text-xl min-h-8 text-center uppercase flex justify-center items-center">
                        <span data-text="Full-stack developer & Designer" id="description">&nbsp;</span>
                    </h2>
                </div>
            </div>
            <div class="w-fit flex justify-center items-center">
                <button id="expandable" class="absolute bg-black z-[999] flex justify-center items-center">
                    <span class="text-sm md:text-base text-white tracking-wider text-center text-nowrap uppercase px-8 py-2">See projects</span>
                </button>
            </div>
        </section>
        <section class="mb-4 w-full text-sm md:text-base flex flex-col">
            <div class="w-full flex justify-between items-start flex-wrap md:flex-nowrap">
                <p class="w-full text-nowrap">
                    <span>
                        ~/christopheralden04@gmail.com
                    </span>
                    <span class="text-gray-400">
                        contact*
                    </span>
                </p> 
                <p class="text-gray-400 flex-1 w-fit hidden md:block">
                    {date}
                </p>
            </div>
            <div class="flex gap-2 w-full">
                <p class="text-[#0000ff]">
                    >
                </p>
                <input class="w-full" type="text" placeholder="send me a message">
            </div>
        </section>
    </div>
</Layout>

<script>
    import { textGlitch } from "@lib/animations/text-effect";
    import { gsapProvider } from "@lib/animations/gsap";

    const expandable = document.getElementById('expandable') as HTMLElement
    const name = document.getElementById('name') as HTMLElement
    const nameText = name.innerText
    const description = document.getElementById('description') as HTMLElement
    const descriptionText = description.dataset.text as string

    document.addEventListener('DOMContentLoaded', ()=>{
        textGlitch({
            text: descriptionText,
            duration: 20,
            glitch: 3,
            hidden: true,
            callbackFn: (newText)=>{
                description.innerText = newText
            }
        })

        textGlitch({
            text: nameText,
            duration: 25,
            glitch: 2,
            callbackFn: (newText)=>{
                name.innerText = newText
            }
        })
        expandable.addEventListener('click', ()=>{
            gsapProvider.instance.to(expandable, {
                z:1000,
                width: '100vw',
                height: '100vh',
                ease: 'expo.out',
                top: 0,
                left: 0,
                duration: 1,
                onComplete: ()=>{
                    window.location.href = '/projects/professional/'
                }
            })

        })
    })
</script>