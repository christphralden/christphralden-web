---
import Layout from "@layouts/layout.astro"
import { FaGithub, FaInstagram, FaLinkedin} from 'react-icons/fa'
import { GoArrowRight } from "react-icons/go";

---

<Layout title="Christopher Alden's Portfolio" className="overflow-hidden" footer={false}>
    <section class="w-full h-[100dvh] flex flex-col p-4 md:px-8 xl:px-16 gap-8 relative">
        <header class="w-full h-full flex flex-col flex-shrink justify-center items-center gap-16">
            <div class="w-fit flex flex-col justify-center items-center">
                <div class="w-fit flex flex-col justify-center items-center">
                    <h1 class="text-center text-7xl md:text-8xl xl:text-9xl tracking-tighter uppercase min-h-20 flex justify-center items-center medium">
                        <span class="font-medium medium" id="name">Christopher Alden</span>
                    </h1>
                    <h2 class="text-base md:text-lg xl:text-xl min-h-8 text-center uppercase flex justify-center items-center">
                        <span data-text="Full-stack developer & Designer" id="description">&nbsp;</span>
                    </h2>
                </div>
            </div>
            <div class="w-fit flex justify-center items-center">
                
                <a href="works/professional"  class="absolute z-[999] flex justify-center items-center group px-4 py-2 cursor-pointer">
                    <span class="text-sm md:text-lg text-black px-2 underline tracking-wider text-center text-nowrap uppercase rasterize transition-all duration-500 ease-out">View Works</span>
                    <GoArrowRight id="expandable" color="#0a0a0a" size={20} className=""/> 
                </a>
            </div>
        </header>
        <section class="w-full h-fit mb-8 absolute bottom-0 left-0">
            <div class="w-full flex justify-center items-center gap-4 cursor-pointer">
                <a href="https://github.com/christphralden/"><FaGithub size={25}/></a>
                <a href="https://instagram.com/christphralden/"><FaInstagram size={25}/></a>
                <a href="https://www.linkedin.com/in/christphralden/"><FaLinkedin size={25}/></a>
            </div>
        </section> 
    </section>
</Layout>

<script>
    import { textGlitch } from "@lib/animations/text-effect";
    import { gsapProvider } from "@lib/animations/gsap";
    import { navigate } from "astro:transitions/client";

    const name = document.getElementById('name') as HTMLElement
    const nameText = name.innerText
    const description = document.getElementById('description') as HTMLElement
    const descriptionText = description.dataset.text as string

    
    document.addEventListener('astro:page-load', ()=>{
        
        textGlitch({
            text: descriptionText,
            duration: 20,
            glitch: 3,
            hidden: true,
            callbackFn: (newText)=>{
                description.innerText = newText
            }
        })

        textGlitch({
            text: nameText,
            duration: 25,
            glitch: 2,
            callbackFn: (newText)=>{
                name.innerText = newText
            }
        })
    })
</script>
