---
import Layout from '@layouts/layout.astro';
---

<Layout>
	<div class="w-full min-h-screen pt-36 flex flex-col px-4 md:px-8 xl:px-16 py-8 gap-16 items-center">
        <section class="w-full flex justify-center items-center text-start lg:text-center uppercase min-h-64 py-10">
            <h1 class="w-full lg:w-1/2 text-xl">
                Im a 
                <span class="animate text-[#0000ff]">fullstack developer</span> 
                and 
                <span class="animate text-[#0000ff]">designer</span> 
                with focus on 
                <span class="underline underline-offset-4">elevating simplicity</span>,
                I take great care in crafting quality experience and code of the things i build.
            </h1>

        </section>
        <div class="w-full flex flex-col gap-16">
            <section class="flex flex-col gap-8 w-full  xl:w-1/2 capitalize">
                <h1 class="uppercase text-xl text-[#0000ff] w-full">[&nbsp;As of recent&nbsp;]</h1>
                <div class="flex flex-col gap-4">
                    <div class="flex justify-between">
                        <h3>Compfest AI Hackathon</h3>
                        <p>2024</p>
                    </div>
                    <div class="flex justify-between">
                        <h3 class="w-2/3">8th ICITISEE 2024</h3>
                        <p>2024</p>
                    </div>
                    <div class="flex justify-between">
                        <h3>Garudahacks</h3>
                        <p>2024</p>
                    </div>
                    <div class="flex justify-between">
                        <h3>Codefest Web3 Dev Hackathon</h3>
                        <p>2024</p>
                    </div>
                    <div class="flex justify-between">
                        <h3 class="w-3/4">BINUS-KEMENRISTEK DIKTI Character and Moderation Program</h3>
                        <p>2024</p>
                    </div>
                    <div class="flex justify-between">
                        <h3 class="w-3/4">Christ Cathedral Post Productions</h3>
                        <p>2017-2020</p>
                    </div>
            </section>
	</div>
</Layout>

<script>
	import {textGlitch} from '@lib/animations/text-effect';

	document.addEventListener('DOMContentLoaded', () => {
		const texts = document.querySelectorAll('.animate') as unknown as NodeListOf<HTMLElement>;
        texts.forEach(text=>{
            const descriptionText = text.innerText as string;
            textGlitch({
                text: descriptionText,
                duration: 25,
                glitch: 3,
                callbackFn: (newText) => {
                    text.innerText = newText;
                },
            });
        })

		
	});
</script>

