---
import { NavbarRoutes } from "@lib/routes";
const currentPath = Astro.url.pathname;
---

<nav class="fixed w-full h-20 flex justify-center">
  <div class="w-[90vw] h-full flex items-center justify-between z-10 bg-background gap-8">
    <div class="w-fit items-center uppercase flex text-base ">
        <span class="logo text-nowrap">LOGO</span>
    </div>
    <div class="w-full flex justify-start gap-8 xl:gap-16">
        {
            NavbarRoutes.map((routes,i) =>{ 
                const isActive = routes.route.includes(currentPath);
                return(
                    <a href={isActive ? "#" : routes.route[0]} class={`uppercase cursor-pointer hover:underline underline-offset-4 flex text-nowrap items-center text-base `}>
                        <p>{routes.name}</p>
                    </a>
            )})
        }
    </div>

  </div>
</nav>